
@{
    ViewBag.Title = "EditItem";
}

<h2>EditItem</h2>

<h2>Item Details</h2>
@model Lab21.Models.Item

<form action="/Home/SaveUpdatedItem" method="post">
    Item Name:<input type="text" value="@Model.ItemName" name="ItemName" /><br />
    Item Description:<input type="text" value="@Model.ItemDescription" name="ItemDescription" /><br />
    Item Quantity:<input type="text" value="@Model.ItemQuantity" name="ItemQuantity" /><br />
    Item Price:<input type="text" value="@Model.ItemPrice" name="ItemPrice" /><br />
    <input type="submit" value="Save Updates" /><br />
</form>


